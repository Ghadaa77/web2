    var chart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Ariana', 'Tunis', 'BenArous','Beja','Bizerte','Gabes','Gafsa','Jendouba','Kairaouan','Kasserine','Kelibi','Kef','Mahdia','Manouba','Mednine','Monastir','Nabeul','Sfax','SidiBouzid','Sliana','Sousse','Tataouine','Tozeur','Zaghouan'],
        datasets: [{
          label: '%',
          data: [{{ data.Ariana }}, {{ data.BenArous }}, {{ data.Beja }}, {{ data.Bizerte }},{{ data.Gabes }},  {{ data.Gafsa }}, {{ data.Jendouba}}, {{ data.Kairaouan }}, {{ data.Kasserine }}, {{ data.Kelibi}}, {{ data.Kef }}, {{ data.Mahdia }}, {{ data.Manouba }},  {{ data.Mednine }},{{ data.Monastir }},  {{ data.Nabeul }}, {{ data.Sfax }},  {{ data.SidiBouzid }}, {{ data.Sliana }},  {{ data.Sousse }},    {{ data.Tataouine }}, {{ data.Tozeur }},  {{ data.Zaghouan }},       ],
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
        scales: {
