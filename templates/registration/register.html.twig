        <button class="btn btn-lg btn-primary"   type="submit"  style="background-color: #A51111; border-color: #A51111;">
       Register
    </button>
    {{ form_end(registrationForm) }}




<a href="{{ path('app_login') }}" class ="row justify-content-center " style="color: #A51111;">login</a> 

     </div>
