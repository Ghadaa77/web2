
{% extends 'baseBack.html.twig' %}
{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>DescriptionService</th>
                <td>{{ service.descriptionService }}</td>
            </tr>
            <tr>
                <th>DateService</th>
                <td>{{ service.dateService ? service.dateService|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PrixService</th>
                <td>{{ service.prixService }}</td>
            </tr>
            <tr>
                <th>TypePaiementService</th>
                <td>{{ service.typePaiementService }}</td>
            </tr>
        </tbody>
    </table>

    <br>
         <form action="{{ path('app_service_edit', {'id': service.id}) }}" method="get" style="display: inline;">
           <button type="submit" class="btn btn-link" style="padding: 0;"><i class="bi bi-pencil-square"></i></button>
         </form>

    {{ include('service/_delete_form.html.twig') }}
    <a href="{{ path('app_service_index') }}">back to list</a>
{% endblock %}
