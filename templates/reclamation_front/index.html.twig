{% extends 'baseFront.html.twig' %}

{% block body %}
    <h1></h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdRec</th>
                <th>L'objectif de la réclamation</th>
                <th>Le texte </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.idRec }}</td>
                <td>{{ reclamation.objectif }}</td>
                <td>{{ reclamation.text }}</td>
                <td>
                    <a href="{{ path('app_reclamation_front_show', {'idRec': reclamation.idRec}) }}">Afficher les réclamations</a>
                    <a href="{{ path('app_reclamation_front_edit', {'idRec': reclamation.idRec}) }}">Modifier</a>
                    <a href="{{ path('app_reclamation_index') }}">Voir les réclamations dans la partie back</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_front_new') }}">Create new</a>
{% endblock %}
