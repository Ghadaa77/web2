{% extends 'baseFront.html.twig' %}

{% block title %}Feedback index{% endblock %}

{% block body %}
    <h1>Feedback du produits </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Produit</th>
                <th>User</th>
                <th>Favoris</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feedbackp in feedbackps %}
            <tr>
                <td>{{ feedbackp.id }}</td>
                <td>{{ feedbackp.fkIdProduit }}</td>
                <td>{{ feedbackp.fkIdUser }}</td>
                <td>{{ feedbackp.favoris ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_feedbackp_showFront', {'id': feedbackp.id}) }}">show</a>
                    <a href="{{ path('app_feedbackp_editFront', {'id': feedbackp.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_feedbackp_newFront') }}">Create new</a>
{% endblock %}
