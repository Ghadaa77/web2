{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCommande</th>
                <th>NbrProduit</th>
                <th>Total</th>
                <th>FkIdLivraison</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idCommande }}</td>
                <td>{{ commande.nbrProduit }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.fkIdLivraison }}</td>
                <td>
                    <a href="{{ path('app_commande_front_show', {'idCommande': commande.idCommande}) }}">show</a>
                    <a href="{{ path('app_commande_front_edit', {'idCommande': commande.idCommande}) }}">edit</a>
                      
                   
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_front_new') }}">Create new</a>
{% endblock %}
